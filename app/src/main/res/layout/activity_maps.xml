<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity" />

    <com.robertlevonyan.views.customfloatingactionbutton.FloatingActionButton
        android:id="@+id/custom_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:fabType="roundedSquare"
        app:fabText="@string/stringButton"
        app:fabTextAllCaps="true"
        app:fabIcon="@drawable/plus"
        app:layout_anchor="@+id/lvToDoList"
        app:layout_anchorGravity="bottom|center|end"
        android:layout_gravity="bottom|center"
        app:fabColor="@color/colorButton"
        android:onClick="goToPost"/>

</FrameLayout>

